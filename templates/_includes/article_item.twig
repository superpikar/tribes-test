{% set class = class|default('w-full') %}
{% set item = item|default({
  category: [
    { title: 'Article' },
  ],
  title: 'Title of article',
  postDate: '2022-02-23',
  body: 'Lorem ipsum dolor sit amet consectetur adipisicing elit. Architecto accusantium praesentium eius, ut atque fuga culpa, similique sequi cum eos quis dolorum.',
  author: {
    fullName: 'Roel Aufderehar',
    src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80'
  },
}) %}

<div class="rounded-lg overflow-hidden {{ class }}">
  <img src="https://images.unsplash.com/photo-1554629947-334ff61d85dc?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1024&h=1280&q=80" class="object-cover w-full h-48">
  <div class="bg-white p-6">
    <span class="text-md text-indigo-600">{{ item.category[0].title }}</span>
    <p class="text-lg text-gray-900">{{ item.title }}</p>
    <div class="text-gray-500">
      {{ item.body|raw }}
    </div>
    <div class="flex mt-8">
      <img src="{{ item.author.src }}" class="h-10 w-10 rounded-full mr-2" />
      <div>
        <p class="font-semibold text-gray-900">{{ item.author.fullName }}</p>
        <p class="text-gray-500 text-sm">{{ item.postDate|date('M D, y') }}</p>
      </div>
    </div>
  </div>
  <div>

  </div>
</div>