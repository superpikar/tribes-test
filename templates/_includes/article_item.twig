{% set class = class|default('w-full') %}
{% set item = item|default(null) %}

{% set imageUrl = item.articlePhoto[0].url ?? '/assets/images/pexels-fauxels-3184306.jpg' %}
{% set writerImageUrl = item.writer[0].peoplePhoto[0].url ?? '/assets/images/Trudeau_visit_White_House_for_USMCA_(cropped).jpg' %}

{% if item %}
  <div class="rounded-lg overflow-hidden cursor-pointer flex flex-col {{ class }}">
    <img src="{{ imageUrl }}" class="object-cover w-full h-48">
    <div class="bg-white p-6 flex-1 flex flex-col justify-between">
      <div>
        <span class="text-md text-indigo-600">{{ item.articleCategory[0].title }}</span>
        <p class="text-lg text-gray-900">{{ item.title }}</p>
        <div class="text-gray-500 mt-4">
          {{ item.body|raw }}
        </div>
      </div>
      <div class="flex mt-8">
        <img src="{{ writerImageUrl }}" class="h-10 w-10 rounded-full mr-2" />
        <div>
          <p class="font-semibold text-gray-900">{{ item.writer[0].title }}</p>
          <p class="text-gray-500 text-sm">{{ item.postDate|date('M D, Y') }}</p>
        </div>
      </div>
    </div>
  </div>
{% endif %}