{% set key = key|default(0) %}
{% set class = class|default('w-full') %}
{% set item = item|default({
  title: 'John Trudeau',
  jobTitle: 'Prime Minister, Canada',
  profilePhoto: [
    {
      url: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80'
    }
  ]
}) %}

<div class="people-item cursor-pointer rounded-lg p-6 border border-transparent flex align-items-center {{ class }}" @click="showModal({{ key }})">
  <img src="{{ item.profilePhoto[0].url }}" class="rounded-full h-32 w-32 mr-10" />
  <div class="text-white self-center">
    <p class="text-lg">{{ item.title }}</p>
    <span class="">{{ item.jobTitle }}</span>
  </div>
</div>